<resources>

    <!-- Application Themes -->
    <style name="HelloMyNameIs" />

    <style name="HelloMyNameIs.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_secondary</item>

        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>

        <item name="android:textViewStyle">@style/HelloMyNameIs.Text.Body</item>
        <item name="android:buttonStyle">@style/HelloMyNameIs.Button</item>
    </style>

    <!-- TextView Styles -->
    <style name="HelloMyNameIs.Text" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/app_color_primary_text</item>
    </style>

    <style name="HelloMyNameIs.Text.Body">
        <item name="android:textSize">@dimen/app_default_textview_text_size</item>
    </style>

    <style name="HelloMyNameIs.Text.Body.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="HelloMyNameIs.Text.Body.Light">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="HelloMyNameIs.Text.Small">
        <item name="android:textSize">@dimen/app_default_textview_small_text_size</item>
    </style>

    <style name="HelloMyNameIs.Text.Title">
        <item name="android:textSize">@dimen/app_default_textview_title_text_size</item>
    </style>

    <style name="HelloMyNameIs.Text.Title.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="HelloMyNameIs.Text.Title.Light">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <!-- Button Styles -->
    <style name="HelloMyNameIs.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/app_default_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/app_color_secondary_text</item>
        <item name="android:background">@drawable/app_rounded_button</item>
        <item name="android:layout_height">@dimen/app_default_button_height</item>
        <item name="android:elevation">@dimen/app_default_button_elevation</item>
    </style>

</resources>
